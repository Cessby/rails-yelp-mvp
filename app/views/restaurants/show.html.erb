    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span><strong>Comment :</strong> <%= review.content %></span><span class="badge badge-primary badge-pill"><%= review.rating %></span></li>
    <% end %>
  </div>

  <div class="mt-5">
    <hr>
  </div>

  <div class="mt-3 mb-5">
    <h3> Add a Reviews </h3>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>

      <%= f.submit "add a review", class: "btn btn-primary" %>
    <% end %>
  </div>
